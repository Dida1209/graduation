.coursetable
    .courseName #{resource.title}
    .courseContainer
        .courseDetail
            span 内容类型
            if resource.type==1
                p 视频
            if resource.type==2
                p 文档
            if resource.type==3
                p 在线测试
        .courseDetail
            span 课程分类
            p #{resource.subjection}
        .courseDetail
            span 课程简介
            p #{resource.summary}
    .courseBottom
        .bottom
            a#zan
                if ifdoLike
                    span.active #{resource.likeNum}
                else
                    span #{resource.likeNum}
            a#comment
                if ifdoComment
                    span.active #{resource.commentNum}
                else
                    span #{resource.commentNum}
            a#collect
                if ifdoCollect
                    span.active #{resource.collectionNum}
                else
                    span #{resource.collectionNum}
