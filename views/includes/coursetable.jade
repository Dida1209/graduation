.coursetable
    .courseName #{resource.title}
    .courseContainer
        .courseDetail
            span 内容类型
            if resource.type==1
                p 视频
            if resource.type==2
                p 文档
            if resource.type==3
                p 在线测试
        .courseDetail
            span 课程分类
            p #{resource.subjection}
        .courseDetail
            span 课程简介
            p #{resource.summary}
    .courseBottom
        .bottom
            a.zan #{resource.likeNum}
            a.comment #{resource.commentNum}
            a.collect #{resource.collectionNum}