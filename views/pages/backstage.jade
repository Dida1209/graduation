extends ../layout

block append style
    link(rel='stylesheet',href='/stylesheets/head.css')
    link(rel='stylesheet',href='/stylesheets/backstage.css')
block content
    include ../includes/header
    .container
        .row
            form#resForm.form-horizontal(method="post",action="/admin/course/new")
                //-隐藏的表单域存储course._id方便更新电影数据,post时如果电影的id是有的，那么说明是更新数据，如果没有说明只是录入新数据
                //input(type="hidden",name="course[_id]")
                .form-group
                    label.col-sm-2.control-label(for="inputTitle") 课程名字
                    .col-sm-10
                        input#inputTitle.form-control(type="text",name="course[title]")
                .form-group
                    label.col-sm-2.control-label(for="inputType") 内容类型
                    .col-sm-3
                        input#inputType(type="radio",name="course[type]",value="1")
                        span 视频
                        input#inputType(type="radio",name="course[type]",value="2")
                        span 文档
                        input#inputType(type="radio",name="course[type]",value="3")
                        span 在线测试
                .form-group
                    label.col-sm-2.control-label(for="inputSubjection") 课程分类
                    .col-sm-10
                        input#inputSubjection.form-control(type="text",name="course[subjection]")
                .form-group
                    label.col-sm-2.control-label(for="inputSummary") 课程简介
                    .col-sm-10
                        input#inputSummary.form-control(type="text",name="course[summary]")
                .form-group.resGroup#group1
                    label.col-sm-2.control-label(for="inputFlash") 片源地址
                    .col-sm-10
                        input#inputFlash.form-control(type="text",name="course[flash]")
                .form-group.resGroup#group2
                    label.col-sm-2.control-label(for="inputDoc") 文档地址
                    .col-sm-10
                        input#inputDoc.form-control(type="text",name="course[doc]")
                .form-group.resGroup#group3
                    label.col-sm-2.control-label(for="inputFlash") 在线测试题目
                    .col-sm-10
                        a#testAdd.btn +
                        span.testAdd 添加
                .form-group
                    .col-sm-2
                    .col-sm-10#testLand
                .form-group
                    .col-sm-offset-2.col-sm-10
                    button#reBtn.btn.btn-default(type="submit") 录入
    #bgblack
    #testSubmit.form-horizontal
        form#testForm
            .form-group
                label.col-sm-3.control-label() 题目(必填)
                .col-sm-9
                    textarea.form-control(type='text',name="test[question]",row='8')
            .form-group
                label.col-sm-3.control-label() A
                .col-sm-9
                    input.form-control(type='text',name='choose[A]')
            .form-group
                label.col-sm-3.control-label() B
                .col-sm-9
                    input.form-control(type='text',name='choose[B]')
            .form-group
                label.col-sm-3.control-label() C
                .col-sm-9
                    input.form-control(type='text',name='choose[C]')
            .form-group
                label.col-sm-3.control-label() D
                .col-sm-9
                    input.form-control(type='text',name='choose[D]')
            .form-group
                label.col-sm-3.control-label() 答案
                .col-sm-9
                    input(type="radio",name="test[answer]",value="A")
                    span A
                    input(type="radio",name="test[answer]",value="B")
                    span B
                    input(type="radio",name="test[answer]",value="C")
                    span C
                    input(type="radio",name="test[answer]",value="D")
                    span D
            .form-group
                label.col-sm-3.control-label() 详解
                .col-sm-9
                    textarea.form-control(type='text',name="test[why]",row='2')
        .form-group
            button#testBtn.btn 确定
            button#testModify.btn 更改
            button#testCancel.btn 取消
block append script
    script(src='/js/backstage.js')
